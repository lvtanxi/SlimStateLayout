<resources>

    <style name="state_retry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:text">@string/retry</item>
        <item name="android:textColor">#727272</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="state_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="state_text">
        <item name="android:id">@id/state_image_view</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#33475f</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="state_image">
        <item name="android:id">@id/state_image_view</item>
        <item name="android:layout_width">@dimen/drawable_size</item>
        <item name="android:layout_height">@dimen/drawable_size</item>
        <item name="android:layout_marginTop">@dimen/info_margin_top</item>
    </style>

</resources>
